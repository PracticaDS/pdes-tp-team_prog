{
  "linters": {
    "**/*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ],
    "**/*.spec.+(js|jsx)": [
      "jest --findRelatedTests"
    ]
  },
  "ignore": ["**/dist/*", "*.constants.*"]
}
